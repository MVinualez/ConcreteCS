<Window x:Name="ConcreteCS" x:Class="ConcreteCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcreteCS"
        mc:Ignorable="d"
        Title="ConcreteCS" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <!-- L'étoile permet de s'étendre -->
        </Grid.ColumnDefinitions>

        <!-- Image centrée dans la première colonne -->
        <Image 
            Source="/logo.png" 
            Grid.ColumnSpan="2" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="116" 
            Height="55" 
            Margin="5,5,0,0"
        />

        <!-- TabControl s'étend dans la deuxième colonne -->
        <TabControl Grid.Column="1" Margin="10,65,10,10">
            <TabItem Header="Calculs">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="146"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="listeCalculs" SelectionMode="Single" SelectionChanged="listeCalculs_SelectionChanged">
                        <ListBoxItem>Longueur du bras</ListBoxItem>
                        <ListBoxItem>Diamètre d'engrenage</ListBoxItem>
                    </ListBox>

                    <Grid Grid.Column="1" x:Name="bras" Visibility="Visible">
                        <TextBlock Text="Calcul pour le bras" />
                    </Grid>

                    <Grid Grid.Column="1" x:Name="engrenage" Visibility="Collapsed">
                        <!-- Entrée de variables -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                            <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">Variables du système</TextBlock>

                            <!-- Charge à lever -->
                            <TextBlock>Charge à soulever (kg)</TextBlock>
                            <TextBox x:Name="ChargeInput" Width="150" Text="300" Margin="0,0,0,10"/>

                            <!-- Nombre de poulies -->
                            <TextBlock>Nombre de poulies</TextBlock>
                            <TextBox x:Name="PoulieInput" Width="150" Text="3" Margin="0,0,0,10"/>

                            <!-- Rapport d'engrenage -->
                            <TextBlock>Rapport de réduction des engrenages</TextBlock>
                            <TextBox x:Name="GearRatioInput" Width="150" Text="1" Margin="0,0,0,10"/>
                            <!-- Valeur par défaut de 1 -->

                            <!-- Bouton pour démarrer la simulation -->
                            <Button Content="Calculer la force nécessaire" Width="200" Margin="0,20,0,0" Click="OnSimulateClick"/>
                        </StackPanel>

                        <!-- Affichage des résultats -->
                        <StackPanel HorizontalAlignment="Center" Width="628">
                            <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10" Width="59">Résultat</TextBlock>
                            <TextBlock Width="242"><Run Text="Force nécessaire pour soulever la charge (N)"/></TextBlock>

                            <!-- Force nécessaire -->
                            <TextBox x:Name="ResultForce" IsReadOnly="True" Width="150" Margin="0,0,0,10"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Simulation">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>