<Window x:Name="ConcreteCS" x:Class="ConcreteCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcreteCS"
        mc:Ignorable="d"
        Title="ConcreteCS" Height="450" Width="800" Icon="/cs_team.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Image principale en haut à gauche -->

        <Image 
            Source="/cs_team.png" 
            Grid.ColumnSpan="2" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="55" 
            Height="55" 
            Margin="5,5,0,0"
        />

        <!-- TabControl qui s'agrandit -->
        <TabControl Grid.Column="1" Margin="10,65,10,10">
            <!-- Onglet Calculs -->
            <TabItem Header="Calculs">
                <Grid Background="#FFE5E5E5">
                    <!-- Image en bas à droite -->
                    <Image Source="/logo.png" 
                           Width="50" Height="25" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Bottom" 
                           Margin="10"/>
                </Grid>
            </TabItem>

            <!-- Onglet Simulation -->
            <TabItem Header="Simulation">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Entrée de variables -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">Variables du système</TextBlock>

                        <!-- Charge à lever -->
                        <TextBlock>Charge à soulever (kg)</TextBlock>
                        <TextBox x:Name="ChargeInput" Width="150" Text="300" Margin="0,0,0,10"/>

                        <!-- Nombre de poulies -->
                        <TextBlock>Nombre de poulies</TextBlock>
                        <TextBox x:Name="PoulieInput" Width="150" Text="3" Margin="0,0,0,10"/>

                        <!-- Rapport d'engrenage -->
                        <TextBlock>Rapport de réduction des engrenages</TextBlock>
                        <TextBox x:Name="GearRatioInput" Width="150" Text="1" Margin="0,0,0,10"/>
                        <!-- Valeur par défaut de 1 -->

                        <!-- Bouton pour démarrer la simulation -->
                        <Button Content="Calculer la force nécessaire" Width="200" Margin="0,20,0,0" Click="OnSimulateClick"/>
                    </StackPanel>

                    <!-- Affichage des résultats -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                        <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,10">Résultat</TextBlock>

                        <!-- Force nécessaire -->
                        <TextBlock>Force nécessaire pour soulever la charge (N)</TextBlock>
                        <TextBox x:Name="ResultForce" IsReadOnly="True" Width="150" Margin="0,0,0,10"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
