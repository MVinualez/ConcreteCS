<Window x:Name="ConcreteCS" x:Class="ConcreteCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConcreteCS"
        mc:Ignorable="d"
        Title="ConcreteCS" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <!-- L'étoile permet de s'étendre -->
        </Grid.ColumnDefinitions>

        <!-- Image centrée dans la première colonne -->
        <Image 
            Source="/logo.png" 
            Grid.ColumnSpan="2" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Width="116" 
            Height="55" 
            Margin="5,5,0,0"
        />

        <!-- TabControl s'étend dans la deuxième colonne -->
        <TabControl Grid.Column="1" Margin="10,65,10,10">
            <TabItem Header="Calculs">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="175"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="listeCalculs" SelectionMode="Single" SelectionChanged="listeCalculs_SelectionChanged">
                        <ListBoxItem>Démultiplication d'un système</ListBoxItem>
                        <ListBoxItem>Longueur du bras</ListBoxItem>
                    </ListBox>

                    <Border x:Name="SelectionNone" BorderBrush="{x:Null}" Margin="5,0,0,0" Grid.Column="1">
                        <TextBlock Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="19" Width="270" TextAlignment="Center" TextWrapping="Wrap">Sélectionnez d'abord un élément dans la liste.</TextBlock>
                    </Border>

                    <!-- Éléments affichés en fonction de l'élément sélectionné dans la liste de gauche -->
                    <Grid Grid.Column="1" x:Name="Demultiplication" Visibility="Collapsed">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="253"/>
                                    <ColumnDefinition/>
                                    <!-- Allows input elements to stretch with the window -->
                                </Grid.ColumnDefinitions>

                                <!-- Variables du système -->
                                <TextBlock Grid.Column="0" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Variables du système" Height="19" Width="137"/>

                                <!-- Charge à lever -->
                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Charge à soulever (kg)" Height="16" Width="118"/>
                                <TextBox x:Name="ChargeInput" Grid.Column="1" Width="150" Text="300" VerticalAlignment="Center" HorizontalAlignment="Left" Height="18"/>

                                <!-- Nombre de poulies -->
                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Nombre de poulies" Height="16" Width="102"/>
                                <TextBox x:Name="PoulieInput" Grid.Row="2" Grid.Column="1" Width="150" Text="3" VerticalAlignment="Center" HorizontalAlignment="Left" Height="18"/>

                                <!-- Rapport d'engrenage -->
                                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Rapport de réduction des engrenages" Height="15" Width="200"/>
                                <TextBox x:Name="GearRatioInput" Grid.Row="3" Grid.Column="1" Width="150" Text="1" VerticalAlignment="Center" HorizontalAlignment="Left" Height="17"/>

                                <!-- Bouton pour démarrer la simulation -->
                                <Button Grid.Row="4" Grid.Column="0" Content="Calculer la force nécessaire" Click="OnCalculateDemuClick" Margin="0,6,0,5" HorizontalAlignment="Left" Width="146"/>

                                <!-- Résultat -->
                                <TextBlock Grid.Row="5" Grid.Column="0" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Résultat" Height="19" Width="53"/>

                                <!-- Force nécessaire -->
                                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Force nécessaire pour soulever la charge (N)" Height="16" Margin="0,19,0,0" Grid.RowSpan="2" Width="234"/>
                                <TextBox Grid.Row="5" Grid.Column="1" Width="150" IsReadOnly="True" VerticalAlignment="Top" HorizontalAlignment="Left" x:Name="ResultForce" Height="18" Margin="0,19,0,0" Grid.RowSpan="2"/>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <Grid Grid.Column="1" x:Name="Bras" Visibility="Collapsed">
                        <TextBlock Text="Calcul pour le bras" />
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Simulation">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>